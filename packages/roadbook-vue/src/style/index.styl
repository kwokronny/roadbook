for $name, $value in yoz_spacing {
  .gap-{$name} {
    gap: $value;
  }
}

for $name in 0 .. 1 {
  .shrink-{$name} {
    flex-shrink: $name;
  }
}

.fade-enter-active, .fade-leave-active {
  transition: all 0.5s ease;
}

.fade-enter-from, .fade-leave-to {
  opacity: 0;
  // transform: translateX(10%);
}

.m-drawer.--bottom {
  .m-drawer-content-wrap {
    height: 100%;
  }
}

.m-drawer-content-wrap.--right {
  border-top-left-radius: var(--maz-border-radius);
  border-bottom-left-radius: var(--maz-border-radius);
}

.m-avatar {
  .m-avatar__wrapper {
    background: var(--maz-color-bg) !important;
    .m-avatar__initial {
      color: var(--maz-color-text) !important;
    }
  }
}

.blob, .fakeblob {
  display: none !important;
}