:root {
  --maz-color-border: rgb(229, 231, 235);
  --maz-border-radius: 16px;
  --maz-border-radius-lg: 30px;
  --bg-gradient-light: linear-gradient(135deg, #fdfcfb 0%, #e2d1c3 100%);
  --bg-gradient-dark: linear-gradient(135deg, #434343 0%, #232323 100%);
  --bg-gradient: var(--bg-gradient-light);
}

* {
  -webkit-text-size-adjust: none;
  box-sizing: border-box;
}

[class~=dark] {
  --bg-gradient: var(--bg-gradient-dark);
  --maz-color-border: var(--maz-color-bg-lighter);
}

a {
  color: var(--maz-color-text);

  &:visited {
    color: var(--maz-color-text);
  }
}

// * {
// font-family: 'Noto Sans SC', sans-serif;
// }
html {
  background-image: var(--bg-gradient);
  font-family: Helvetica, Tahoma, Arial, 'PingFang SC', 'Hiragino Sans GB', 'Heiti SC', STXihei, 'Microsoft YaHei', SimHei, 'WenQuanYi Micro Hei';
  background-attachment: fixed;
  overflow-x: hidden;
  height: 100%;
}

html, body {
  margin: 0;
  padding: 0;
}

body {
  // position: relative;
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

#app {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  height: 0;
}


a {
  color: var(--maz-color-text);
  text-decoration: none;
}

.page {
  flex-grow: 1;
}

::-webkit-scrollbar {
  width: 5px;
  height: 5px;
}

::-webkit-scrollbar-track {
  background-color: transparent;
}

::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.5);
  border-radius: 5px;
}

.m-fullscreen-btn {
  color: var(--maz-color-white);
}

